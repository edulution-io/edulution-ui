  "compilerOptions": {
    "outDir": "../../dist/apps/api",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "target": "ES2022",
    "composite": true,
    "declaration": true
  },
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["./**/*", "../../libs/**/*"]
}
